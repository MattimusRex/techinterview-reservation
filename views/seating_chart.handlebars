{{!-- script used to pass seats variable from server to client without client making request.
this gets put as a variable in the javascript file --}}
<script>
    var seats = [];
    {{#each seats}}
        seats[{{@index}}] = {}
        seats[{{@index}}].seat_num = {{this.seat_num}}
        seats[{{@index}}].row = "{{this.row}}"    
    {{/each}}
</script>

<script src="../../javascript/seating_chart.js"></script>
<div class="container">
    <div class="row justify-content-center">
        <h1>Screen</h1>
    </div>

    <div class="row">
        <table class="col table" id="seat_table">
            <tbody id="seat_tbody">
            </tbody>
        </table>
    </div>

    <div class="row">
        <div class="col">
            <button class="btn btn-primary" onclick="reserve_seats({{theater}}, '{{time}}')">Reserve Seats</button>
        </div>
    </div>
</div>
